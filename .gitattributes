# Auto detect text files and perform LF normalization
* text=auto

# Force Windows line endings for certain file types
*.cmd        text eol=crlf
*.bat        text eol=crlf
*.ps1        text eol=crlf
*.sh         text eol=lf

# Binary files should not be modified
*.png        binary
*.jpg        binary
*.jpeg       binary
*.gif        binary
*.ico        binary
*.ttf        binary
*.woff       binary
*.woff2      binary
*.eot        binary
*.svg        binary
*.pdf        binary

# Source code files should use LF
*.js         text eol=lf
*.jsx        text eol=lf
*.ts         text eol=lf
*.tsx        text eol=lf
*.json       text eol=lf
*.html       text eol=lf
*.css        text eol=lf
*.scss       text eol=lf
*.md         text eol=lf
*.yml        text eol=lf
*.yaml       text eol=lf
